<h1>Burgers The APP!</h1>


<div class="Borger-section">
    <h2>Burgers</h2>
    <li>
        {{#each burger}}
        {{#unless this.devoured}}
        {{!-- {{> burgers/burger-block devoured=true}} --}}
         <p>{{this.id}}.{{burger_name}}</p>
        <button class="change-devoured" data-id="{{this.id}}">
            {{/unless}}
            {{/each}}
    </li>

    <h2>Burgers Eaten</h2>
    <li>
        {{#each burger}}
        {{#if this.devoured}}
        <p>{{this.id}}.{{burger_name}}</p>
        {{/if}}
        {{/each}}
    </li>
 
</div>


<div class="eat-area">
    <h2>Burgers</h2>
    <h2>Add another one</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="devoured">What is the burger name?</label>
            <input id="burger_name">
        </div>


        <div class="form-group">
            <input type="radio" name="devoured" value="1" checked> Devoured!
            <br>
            <input type="radio" name="devoured" value="0">Not eaten yet
        </div>

        <button type="submit">Add Borger</button>
    </form>

</div>