<h1>Burgers The APP!</h1>


<div class="Borger-section">
    <h2>Burgers</h2>
    <li>
        {{#each burger}}
        {{#unless this.devoured}}
        {{!-- {{> burgers/burger-block devoured=true}} --}}
         <p>{{id}}.{{burger_name}}</p>

        <button class="change-devoured" value="{{id}}">Eat Me</button>
            {{/unless}}
            {{/each}}
    </li>
</div>

<div class="to-eat">
    <h2>Burgers Eaten</h2>
    <li>
        {{#each burger}}
        {{#if devoured}}
        <p>{{id}}.{{burger_name}}</p>
        {{/if}}
        {{/each}}
    </li>
</div>


<div class="eat-area">
    <h2>Burgers</h2>
    <h2>Add another one</h2>
    <div class="create-form">
        <div class="form-group">
            <label for="devoured">What is the burger name?</label>
            <input id="burger_name" type="text-box">
            <button class="add-borger" type="submit">Add Borger</button>
        </div>
    </div>
</div>